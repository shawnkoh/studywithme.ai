<% provide(:title, "Forgot your password?") %>
<% provide(:body_class, "body-signin") %>
<%= render 'shared/flash' %>
<%= render 'shared/error_messages' %>

<%= form_for(:password_reset, url: password_resets_path) do |f| %>
  <a href="/" class="navbar-brand">studywithme.ai</a>
  <h1 class="h3 mb-3 font-weight-normal">Reset your password</h1>

  <%= hidden_field_tag :email, @user.email %>

  <div class="form-label-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true %>
    <%= f.label :password %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation" %>
    <%= f.label :password_confirmation %>
  </div>

  <%= f.submit "Update password", class: "btn btn-lg btn-primary btn-block" %>
  <p class="mt-5 mb-3 text-muted text-center">Â© 2019 Koh Zheng Qiang Shawn</p>
<% end %>