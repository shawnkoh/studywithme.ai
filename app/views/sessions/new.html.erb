<% provide(:title, "Sign in") %>
<% provide(:body_class, "body-signin") %>
<%= form_for(:session, url: login_path, html: { class: "form-signin" }) do |f| %>
  <a href="/" class="navbar-brand">studywithme.ai</a>
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

  <div class="form-label-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    <%= f.label :email %>
  </div>
  
  <div class="form-label-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    <%= f.label :password %>
  </div>

  <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
  <p> New here? <%= link_to "Create an account", signup_path %>.</p>

  <p class="mt-5 mb-3 text-muted text-center">Â© 2019</p>
<% end %>
